<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<!-- File contains database configuration as url, user, password -->

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="current_session_context_class">thread</property>

        <!-- Assume test is the database name -->
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/Airport</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>

        <mapping class="cz.muni.airport.model.Steward"/>
        <mapping class="cz.muni.airport.model.Airplane"/>
        <mapping class="cz.muni.airport.model.Airport"/>
        <mapping class="cz.muni.airport.model.Flight"/>


    </session-factory>
</hibernate-configuration>